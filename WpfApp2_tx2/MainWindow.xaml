<Window x:Class="WpfApp2_tx2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2_tx2"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="100 0 0 0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label" x:Key="LabelError">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="#00a2b4"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Style.Resources>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#000"/>
                </Trigger>
            </Style.Triggers>

        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="280"></ColumnDefinition>
            <ColumnDefinition Width="270"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="CHƯƠNG TRÌNH QUẢN LÝ SINH VIÊN" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3" FontSize="20" FontWeight="Bold"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Mã sinh viên"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Họ tên sinh viên"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Địa chỉ"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Điểm"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Học lớp"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="" Name="txtMasv"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="" Name="txtHoten"/>
        <ComboBox Grid.Row="3" Grid.Column="1" SelectedIndex="0" Name="cboDiachi">
            <ComboBoxItem>Hà Nội</ComboBoxItem>
            <ComboBoxItem>Hải Phòng</ComboBoxItem>
            <ComboBoxItem>Quảng Ninh</ComboBoxItem>
        </ComboBox>
        <TextBox Grid.Row="4" Grid.Column="1" Text="" Name="txtDiem"/>
        <ComboBox Grid.Row="5" Grid.Column="1" SelectedIndex="0" Name="cboLophoc">
            <ComboBoxItem>Hà Nội</ComboBoxItem>
            <ComboBoxItem>Hải Phòng</ComboBoxItem>
            <ComboBoxItem>Quảng Ninh</ComboBoxItem>
        </ComboBox>
        <Label Grid.Row="1" Grid.Column="2" Content="Error message"
       Style="{StaticResource LabelError}" Name="errMasv"/>
        <Label Grid.Row="2" Grid.Column="2" Content="Error message"
       Style="{StaticResource LabelError}" Name="errHoten"/>
        <Label Grid.Row="3" Grid.Column="2" Content="Error message"
       Style="{StaticResource LabelError}" Name="errDiachi"/>
        <Label Grid.Row="4" Grid.Column="2" Content="Error message"
       Style="{StaticResource LabelError}" Name="errDiem"/>
        <Label Grid.Row="5" Grid.Column="2" Content="Error message"
       Style="{StaticResource LabelError}" Name="errLop"/>
        <DataGrid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"
          Height="230" Width="600" Name="dgDanhsach" Margin="10"
          HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã sv"/>
                <DataGridTextColumn Header="Mã sv"/>
                <DataGridTextColumn Header="Mã sv"/>
                <DataGridTextColumn Header="Mã sv"/>
                <DataGridTextColumn Header="Mã sv"/>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Grid.Row="7" Grid.Column="0" Grid.RowSpan="3" Margin="0 5 0 0"
           HorizontalAlignment="Center" Width="auto">
            <Button x:Name="btnThem">Thêm</Button>
            <Button x:Name="btnSua">Sửa</Button>
        </WrapPanel>

    </Grid>
</Window>
