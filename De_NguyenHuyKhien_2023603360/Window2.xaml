<Window x:Class="baikiemtratx2.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:baikiemtratx2"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="600">
    <Grid Margin="10">
        <DataGrid x:Name="dgvHienThi"  AutoGenerateColumns="False" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding maNhanVien}" Header="Mã nhân viên "/>
                <DataGridTextColumn Binding="{Binding hoTen}" Header="Họ tên "/>
                <DataGridTextColumn Binding="{Binding gioiTinh}" Header="Giới tính "/>
                <DataGridTextColumn Binding="{Binding tienBanHang}" Header="Số tiền bán hàng "/>
                <DataGridTextColumn Binding="{Binding tienHoaHong}" Header="Số tiền hoa hồng "/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
