<Window x:Class="baikiemtratx2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:baikiemtratx2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border BorderBrush="green" BorderThickness="2" Margin="10">
        <Grid Background="LightSteelBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="159*"></ColumnDefinition>
                <ColumnDefinition Width="617*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Thông tin nhân viên " HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkOrange" FontSize="35" FontWeight="Bold" Grid.ColumnSpan="2"/>
            <Label Content="Mã nhân viên: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="88"/>
            <TextBox x:Name="txtMaNhanVien" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Height="18"/>
            <Label Content="Họ tên: " HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Height="25" Width="52"/>
            <TextBox x:Name="txtHoTen" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Height="17"/>
            <Label Content="Giới tính: " HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Height="26" Width="61"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Height="14" Width="114">
                <RadioButton x:Name="rdNam" Content="Nam" IsChecked="True" Margin="10 0 0 0"/>
                <RadioButton x:Name="rdNu" Content="Nữ" Margin="25 0 0 0 "/>
            </StackPanel>
            <Label Content="Số tiền bán hàng: " HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Center" Height="26" Width="106"/>
            <TextBox x:Name="txtSoTien" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Height="18"/>
            <Label Content="Danh sách nhân viên" HorizontalAlignment="Left" Margin="0,16,0,0" Grid.Row="5" VerticalAlignment="Top" Height="26" Width="120"/>
            <Border BorderBrush="green" BorderThickness="2" Grid.Row="6" Grid.ColumnSpan="2">
                <DataGrid x:Name="dgvHienThi"  AutoGenerateColumns="False" ColumnWidth="*">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding maNhanVien}" Header="Mã nhân viên "/>
                        <DataGridTextColumn Binding="{Binding hoTen}" Header="Họ tên "/>
                        <DataGridTextColumn Binding="{Binding gioiTinh}" Header="Giới tính "/>
                        <DataGridTextColumn Binding="{Binding tienBanHang}" Header="Số tiền bán hàng "/>
                        <DataGridTextColumn Binding="{Binding tienHoaHong}" Header="Số tiền hoa hồng "/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="50" Margin="20,0,0,0" Width="180">
                <Button Template="{StaticResource themTemp}" x:Name="btnThem"  Margin="10" Width="70" Height="30" Content="Thêm" Click="btnThem_Click"></Button>
                <Button Template="{StaticResource win2Temp}" x:Name="btnWindow2" Margin="10" Width="70" Height="30" Content="window 2" Click="btnWindow2_Click"></Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
